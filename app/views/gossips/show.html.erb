  <%= button_to 'Unlike', gossip_like_path(@gossip, pre_like), method: :delete, class: "btn btn-link" %>
<% else %>
  <%= button_to 'Like', gossip_like_index_path(@gossip), method: :post, class: "btn btn-link" %>
<% end %>

<br>
