                        <div class="comment-footer"> <span class="text-muted float-right">April 14, 2019</span>
                        <% if comment_is == true  %>
                        <%= link_to "  Edit  ", edit_comment_path(c.id), class:"btn btn-cyan btn-sm" %><% end %> </div>
                        
                    </div>
                       
                </div> 
                 
